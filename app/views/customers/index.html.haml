%h1 Listing customers

%table
  %tr
    %th Name
    %th Idcode
    %th Description
    %th Total purchase
    %th Discount
    %th
    %th
    %th

  - @customers.each do |customer|
    %tr
      %td= customer.name
      %td= customer.idcode
      %td= customer.description
      %td= customer.total_purchase
      %td= customer.discount
      %td= link_to 'Show', customer
      %td= link_to 'Edit', edit_customer_path(customer)
      %td= link_to 'Destroy', customer, :method => :delete, :data => { :confirm => 'Are you sure?' }

