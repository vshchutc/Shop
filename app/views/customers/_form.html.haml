= form_for @customer do |f|
  - if @customer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@customer.errors.count, "error")} prohibited this customer from being saved:"
      %ul
        - @customer.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :idcode
    = f.number_field :idcode
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :total_purchase
    = f.text_field :total_purchase
  .field
    = f.label :discount
    = f.number_field :discount
  .actions
    = f.submit 'Save'
